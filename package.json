{
  "name": "@aioutlet/tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for AIOutlet microservices platform - Integration, Smoke, and Performance tests",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config=jest.config.integration.js",
    "test:integration:watch": "jest --config=jest.config.integration.js --watch",
    "test:smoke": "jest --config=jest.config.smoke.js",
    "test:smoke:watch": "jest --config=jest.config.smoke.js --watch",
    "test:performance": "jest --config=jest.config.performance.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test:smoke && npm run test:integration && npm run test:performance",
    "test:ci": "npm run test:smoke && npm run test:integration",
    "services:up": "docker-compose up -d",
    "services:down": "docker-compose down",
    "services:logs": "docker-compose logs -f",
    "services:status": "docker-compose ps",
    "wait-for-services": "node scripts/wait-for-services.js",
    "pretest:integration": "npm run wait-for-services",
    "pretest:e2e": "npm run wait-for-services",
    "pretest:smoke": "npm run wait-for-services"
  },
  "keywords": [
    "testing",
    "integration",
    "smoke",
    "performance",
    "microservices",
    "aioutlet"
  ],
  "author": "AIOutlet Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@playwright/test": "^1.56.1",
    "axios": "^1.6.8",
    "babel-jest": "^30.0.0",
    "dotenv": "^16.4.5",
    "jest": "^30.0.0",
    "nock": "^14.0.10",
    "playwright": "^1.56.1",
    "uuid": "^9.0.1",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
